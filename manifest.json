{
    "manifest_version": 2,
    "name": "Time tracker",
    "version": "1",
    "author": "Harsh",
    "permissions": "Track user activity during specific hours",
    "browser_action" :{
        "default_popup":"popup.html",
        "default_icon":{
            "16":"images/icon16.png",
            "48":"images/icon48.png",
            "128":"images/icon128.png"
        }
    },
    "icons": {
        "16":"images/icon16.png",
        "48":"images/icon48.png",
        "128":"images/icon128.png"
    },
    "background": {
        "scripts":["background.js"],
        "persisitent":false
    },
    "content_scripts":[
        {
            "matches":["<all_urls"],
            "js":["content.js"]
        }
    ]
}